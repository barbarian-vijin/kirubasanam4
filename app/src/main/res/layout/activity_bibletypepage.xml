<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05386B"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/tamilbibledata"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#fff"
        android:layout_height="90dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="15dp"
            android:src="@drawable/bible" />

        <TextView
            android:id="@+id/tamil_bible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/imageview"
            android:fontFamily="sans-serif"
            android:text="TAMIL BIBLE"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tamilbibleintamil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tamil_bible"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/imageview"
            android:text="தமிழ் பைபிள்"
            android:textSize="17sp"
            android:textStyle="bold"></TextView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#fff"
        android:layout_height="90dp">

        <Button
            android:id="@+id/btnEnglishbible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"></Button>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bibleimage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="15dp"
            android:src="@drawable/bible" />

        <TextView
            android:id="@+id/english_bible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/bibleimage"
            android:fontFamily="sans-serif"
            android:text="ENGLISH BIBLE"
            android:textColor="#000"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/tamilbibleinenglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/english_bible"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/bibleimage"
            android:text="KJV"
            android:textSize="13sp"></TextView>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hindibibledata"
        android:layout_width="match_parent"
        android:layout_marginTop="260dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#fff"
        android:layout_height="90dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hindiImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:src="@drawable/bible" />

        <TextView
            android:id="@+id/hindi_bible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/hindiImage"
            android:fontFamily="sans-serif"
            android:text="HINDI BIBLE"
            android:textColor="#000"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/tamilbibleinHindi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hindi_bible"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/hindiImage"
            android:text="
बाइबिल"
            android:textSize="13sp"></TextView>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/malayalambibledata"
        android:layout_width="match_parent"
        android:layout_marginTop="360dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#fff"
        android:layout_height="90dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/malayalamImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:src="@drawable/bible" />

        <TextView
            android:id="@+id/malayalam_bible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/malayalamImage"
            android:fontFamily="sans-serif"
            android:text="MALAYALAM BIBLE"
            android:textColor="#000"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/tamilbibleinMalayalam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/malayalam_bible"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/malayalamImage"
            android:text="
बाइबिल"
            android:textSize="13sp"></TextView>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/kannadabibledata"
        android:layout_width="match_parent"
        android:layout_marginTop="460dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#fff"
        android:layout_height="90dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/kannadamImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:src="@drawable/bible" />

        <TextView
            android:id="@+id/kannadam_bible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/kannadamImage"
            android:fontFamily="sans-serif"
            android:text="KANNADA BIBLE"
            android:textColor="#000"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/tamilbibleinKannadam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kannadam_bible"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/kannadamImage"
            android:text="ಬೈಬಲ್"
            android:textSize="13sp"></TextView>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/telungubibledata"
        android:layout_width="match_parent"
        android:layout_marginTop="560dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#fff"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_height="90dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/TelunguImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="15dp"
            android:src="@drawable/bible" />

        <TextView
            android:id="@+id/telungu_bible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/TelunguImage"
            android:fontFamily="sans-serif"
            android:text="TELUNGU BIBLE"
            android:textColor="#000"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/tamilbibleinTelungu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telungu_bible"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/TelunguImage"
            android:text="బైబిల్"
            android:textSize="13sp"></TextView>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>